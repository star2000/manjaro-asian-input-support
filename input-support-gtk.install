post_install() {

	cat usr/share/manjaro-asian-input-support-gtk/gtk-variables >> /etc/profile
	echo
	echo "Reboot your system to apply modify"
	echo
}

post_upgrade() {
	post_remove
	post_install
}

post_remove() {
	sed -i '/^###Add/,/^\$/{/^###End/!{/^\$/!d;};}' /etc/profile
	sed -i '/###End###/d' /etc/profile
}
