post_install() {

	cat usr/share/manjaro-asian-input-support-qt/qt-variables >> /etc/security/pam_env.conf
	echo
	echo "Reboot your system to apply modify"
	echo
}

post_upgrade() {
	post_remove
	post_install
}

post_remove() {
	sed -i '/^###Add/,/^\$/{/^###End/!{/^\$/!d;};}' /etc/security/pam_env.conf
	sed -i '/###End###/d' /etc/security/pam_env.conf
}
